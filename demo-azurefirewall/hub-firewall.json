{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Value used for Environment applied to all taggable resources"
            }
        },
        "hubVnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of Hub Vnet"
            }
        },
        "netApiVersion": {
            "type": "string",
            "defaultValue": "2019-11-01",
            "metadata": {
                "description": "The ARM Network API Version to use"
            }
        },
        "fwHubName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Firewall instance to be created"
            }
        },
        "azFirewallPublicIP": {
            "type": "string",
            "defaultValue": "pip-fw",
            "metadata": {
                "description": "The name of the Azure Firewall Public IP"
            }
        },
        "azFirewallMgmtPublicIP": {
            "type": "string",
            "defaultValue": "pip-fwmgt",
            "metadata": {
                "description": "The name of the Azure Firewall Management Public IP"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "name": "[parameters('azFirewallPublicIP')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "[parameters('netApiVersion')]",
            "location": "[variables('location')]",
            "properties": {
                "publicIpAllocationMethod": "Static"
            },
            "sku": {
                "name": "Standard"
            },
            "tags": {
                "Environment": "[parameters('environment')]"
            }
        },
        {
            "name": "[parameters('azFirewallMgmtPublicIP')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "[parameters('netApiVersion')]",
            "location": "[variables('location')]",
            "properties": {
                "publicIpAllocationMethod": "Static"
            },
            "sku": {
                "name": "Standard"
            },
            "tags": {
                "Environment": "[parameters('environment')]"
            }
        },
{
            "name": "[parameters('fwHubName')]",
            "type": "Microsoft.Network/azureFirewalls",
            "apiVersion": "[parameters('netApiVersion')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIpAddresses/', parameters('azFirewallPublicIP'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', parameters('azFirewallMgmtPublicIP'))]"
            ],
            "zones": [
                "1",
                "2"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('hubVnetName'), 'AzureFirewallSubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', parameters('azFirewallPublicIP'))]"
                            }
                        }
                    }
                ],
                "managementIpConfiguration": {
                    "name": "mgmtipconfig",
                    "properties": {
                        "subnet": {
                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('hubVnetName'), 'AzureFirewallManagementSubnet')]"
                        },
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIpAddresses', parameters('azFirewallMgmtPublicIP'))]"                            
                        }
                    }
                },
                "threatIntelMode":"Alert",
                "sku": {
                    "name": "AZFW_VNet",
                    "tier": "Standard"
                }
            }
        }
    ],
    "outputs": {
        "fwPrivateIP": {
            "type": "string",
            "value": "[reference(parameters('fwHubName')).ipConfigurations[0].properties.privateIPAddress]"
        }
    }
}