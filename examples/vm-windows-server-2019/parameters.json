{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "value":"VM_NAME"
        },
        /* Optional only if VNet is in a different subscription */
        "vnetSubscriptionId": {
            "value":"VNET_SUBSCRIPTION_ID"
        },
        /* Optional only if VNet is in a different resource group */
        "vnetResourceGroup": {
            "value": "VNET_RESOURCE_GROUP"
        },
        "vnetName": {
            "value":"VM_VNET_NAME"
        },
        "subnetName": {
            "value": "VM_SUBNET_NAME"
        },
        "virtualMachineSize": {
            "value":"VM_SIZE"
        },
        "adminUsername": {
            "value":"VM_LOCAL_ADMIN_USERNAME"
        },
        /* This example shows how to reference a password stored in Azure Key Vault but this could be passed as a simple secure string */
        "adminPassword": {
            "reference": {
                "keyVault": {
                    "id": "/subscriptions/<SUBSCRIPTIONID/resourceGroups/<KEYVAULT_RG_NAME>/providers/Microsoft.KeyVault/vaults/<KEYVAULT_NAME>"
                },
                "secretName": "<VM_LOCAL_ADMIN_PASSWORD_SECRET_NAME",
                "secretVersion": "<SECRET_VERSION>"
            }
        },
        /* This example shows how to reference a Log Analytics Workspace Id stored in Azure Key Vault but this could be passed as a standard string */
        "myWorkspaceId": {
            "reference": {
                "keyVault": {
                    "id": "/subscriptions/<SUBSCRIPTIONID/resourceGroups/<KEYVAULT_RG_NAME>/providers/Microsoft.KeyVault/vaults/<KEYVAULT_NAME>"
                },
                "secretName": "<LOG_ANALYTICS_WORKSPACE_ID>",
                "secretVersion": "<SECRET_VERSION>"
            }
        },
        /* This example shows how to reference a Log Analytics Workspace Key stored in Azure Key Vault but this could be passed as a standard string */
        "myWorkspaceKey": {
            "reference": {
                "keyVault": {
                    "id": "/subscriptions/<SUBSCRIPTIONID/resourceGroups/<KEYVAULT_RG_NAME>/providers/Microsoft.KeyVault/vaults/<KEYVAULT_NAME>"
                },
                "secretName": "<LOG_ANALYTICS_WORKSPACE_SECRET>",
                "secretVersion": "<SECRET_VERSION>"
            }
        },
        "availabilityZone": {
            "value":"AVAILABILITY_ZONE_ID"
        },
        "tagValues": {
            "value": {
                "TAG1": "VALUE",
                "TAG2": "VALUE"
            }
        }
    }
}